{
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "GPT Cat",
  "action": {
    "default_popup": "js/index.html",
    "default_title": "GPT Cat"
  },
  "permissions": [
    "webNavigation",
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*"
      ],
      "run_at": "document_idle",
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}